<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myapp.moydom.ru.myhouse.screens.MenuFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_user_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="35dp"
        android:paddingLeft="25dp"
        android:paddingRight="45dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/menu_user_avatar_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/menu_user_icon"
                android:layout_height="65dp"
                android:layout_width="65dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/menu_user_address"
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/menu_user_icon"
                android:text="г. Москва\nул. Тверская, дом 1, кв. 12"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/menu_user_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:text="Андрей Павлович\nАстафьев"
            android:textColor="@color/text_grey"/>

        <!--<TextView
            android:id="@+id/menu_user_city"
            android:layout_height="wrap_content"
