<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SettingsFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/settings_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_header_menu" />

    <LinearLayout
        android:id="@+id/settings_wrapper"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="57dp"
        android:paddingRight="57dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/settings_img"
            android:layout_height="103dp"
            android:layout_width="103dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/black"/>

        <Button
            android:id="@+id/settings_change_pswd_btn"
            android:layout_height="46dp"
            android:layout_width="match_parent"
            android:layout_marginTop="33dp"
            android:text="Смена пароля"/>

        <Button
            android:id="@+id/settings_change_email_btn"
            android:layout_height="46dp"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:text="Смена e-mail"/>

        <Button
            android:id="@+id/settings_change_phone_btn"
            android:layout_height="46dp"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:text="Смена телефона"/>
    </LinearLayout>

</LinearLayout>