<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myapp.moydom.ru.myhouse.screens.InvoiceFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/invoice_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_header_menu" />

    <ScrollView
        android:id="@+id/invoice_body_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/invoice_body_wrapper"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/invoice_calendar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:paddingBottom="23dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:stretchColumns="1"
                android:background="@color/black">

                <TableRow>

                    <RelativeLayout
                        android:id="@+id/invoice_calendar_navline"
                        android:layout_height="56dp"
                        android:layout_width="match_parent"
                        android:layout_column="1">

                        <ImageView
                            android:id="@+id/invoice_calendar_year_back"
                            android:layout_height="30dp"
                            android:layout_width="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="60dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/invoice_calendar_year"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:text="2018"
                            android:textSize="18dp"/>

                        <ImageView
                            android:id="@+id/invoice_calendar_year_next"
                            android:layout_height="30dp"
                            android:layout_width="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:background="@color/white"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:id="@+id/invoice_calendar_line"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"/>

                <TableRow
                    android:layout_marginTop="28dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:id="@+id/invoice_calendar_row1"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_january"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_february"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_march"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="16dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:id="@+id/invoice_calendar_row2"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_april"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_may"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_june"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="16dp"
                    android:background="@color/black">

                    <LinearLayout
                        android:id="@+id/invoice_calendar_row3"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_july"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_august"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_september"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="16dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:id="@+id/invoice_calendar_row4"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_october"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_november"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invoice_calendar_december"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/invoice_debt_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:text="Текущая задолженность"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/invoice_debt_sum"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:text="1000 Р"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <Button
                android:id="@+id/invoice_pay_btn"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="80dp"
                android:text="Оплатить"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
