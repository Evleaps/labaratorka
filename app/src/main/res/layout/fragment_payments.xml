<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.PaymentsFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/payments_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_header_menu" />

    <ScrollView
        android:id="@+id/payments_scroll"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/payments_body_wrapper"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/payments_calendar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:paddingBottom="23dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:stretchColumns="1"
                android:background="@color/black">

                <TableRow>

                    <RelativeLayout
                        android:id="@+id/payments_calendar_navline"
                        android:layout_height="56dp"
                        android:layout_width="match_parent"
                        android:layout_column="1">

                        <ImageView
                            android:id="@+id/payments_calendar_year_back"
                            android:layout_height="30dp"
                            android:layout_width="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="60dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/payments_calendar_year"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:text="2018"
                            android:textSize="18dp"/>

                        <ImageView
                            android:id="@+id/payments_calendar_year_next"
                            android:layout_height="30dp"
                            android:layout_width="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:background="@color/white"/>
                    </RelativeLayout>
                </TableRow>

                <View
                    android:id="@+id/payments_calendar_line"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"/>

                <TableRow
                    android:layout_marginTop="28dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:id="@+id/payments_calendar_row1"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/payments_calendar_january"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_february"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_march"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="16dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:id="@+id/payments_calendar_row2"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/payments_calendar_april"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_may"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_june"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="16dp"
                    android:background="@color/black">

                    <LinearLayout
                        android:id="@+id/payments_calendar_row3"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/payments_calendar_july"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_august"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_september"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="16dp"
                    android:background="@color/black">
                    <LinearLayout
                        android:id="@+id/payments_calendar_row4"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/payments_calendar_october"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_november"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_calendar_december"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="6dp"
                            android:background="@color/white"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/payments_explan_wrapper"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_marginBottom="40dp"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:background="@color/grey">

                <RelativeLayout
                    android:id="@+id/payments_explan_head"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/payments_explan_month"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Июнь"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/payments_explan_money"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="3000 Р"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/payments_explan_icon"
                        android:layout_height="18dp"
                        android:layout_width="18dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:textAllCaps="true"
                        android:textSize="18dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/payments_block_wrapper"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/payments_data_row1"
                        android:layout_height="36dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/payments_data_head1"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="22.05.2018"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/payments_sum1"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="3000 Р"
                            android:background="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payments_data_row2"
                        android:layout_height="36dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/payments_data_head2"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="22.05.2018"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/payments_sum2"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="3000 Р"
                            android:background="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payments_data_row3"
                        android:layout_height="36dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/payments_data_head3"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="17.05.2018"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/payments_sum3"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="3000 Р"
                            android:background="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/payments_month_desc"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="16dp"
                        android:text="Начисления и оплаты за июнь"/>

                    <LinearLayout
                        android:id="@+id/payments_all_info"
                        android:layout_height="66dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/payments_all_info_invoice_container"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/payments_all_info_invoice_icon"
                                android:layout_height="18dp"
                                android:layout_width="18dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_alignParentRight="true"
                                android:background="@color/black"/>

                            <TextView
                                android:id="@+id/payments_all_info_invoice"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_marginTop="16dp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:text="Начислено"
                                android:textAllCaps="true"/>

                            <TextView
                                android:id="@+id/payments_all_info_invoice_sum"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_below="@id/payments_all_info_invoice"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:text="4000 Р"
                                android:textAllCaps="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/payments_all_info_payment_container"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/payments_all_info_payment_icon"
                                android:layout_height="18dp"
                                android:layout_width="18dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_alignParentRight="true"
                                android:background="@color/black"/>

                            <TextView
                                android:id="@+id/payments_all_info_payment"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_marginTop="16dp"
                                android:gravity="center"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:text="Оплачено"/>

                            <TextView
                                android:id="@+id/payments_all_info_payment_sum"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_below="@id/payments_all_info_payment"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:text="6000 Р"
                                android:textAllCaps="true"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/payments_to_service_btn"
                        android:layout_height="50dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="Перейти к услугам"/>

                </LinearLayout>

            </LinearLayout>

            <!--<TextView
                android:id="@+id/payments_debt_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:text="Задолженность за месяц"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/payments_debt_sum"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:text="1000 Р"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"/>-->



        </LinearLayout>
    </ScrollView>

</LinearLayout>