<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myapp.moydom.ru.myhouse.screens.LearnFirstFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/learn_first_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/learn_first_logo"
        android:layout_height="80dp"
        android:layout_width="225dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Контроль услуг ЖКХ всегда под рукой"
        android:textColor="@color/white"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/learn_first_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:background="@color/grey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/learn_first_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="110dp"
            android:text="Мы рады приветствовать\nВас в приложении ЖКХ"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/learn_first_lk"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:text="Личный кабинет абонента"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/light_grey"/>

        <Button
            android:id="@+id/learn_first_next"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:text="Дальше"/>

        <ImageView
            android:id="@+id/learn_first_drops"
            android:layout_height="34dp"
            android:layout_width="100dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>

    </LinearLayout>

</LinearLayout>
