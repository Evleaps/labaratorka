<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ChoiceServiceFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/choice_service_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_header_menu" />

    <TextView
        android:id="@+id/choice_service_desc"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        android:textSize="14dp"
        android:text="Выберите необходимые услуги"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/choice_service_type"
        android:layout_height="46dp"
        android:layout_width="match_parent"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="14dp"
        android:text="Водоснабжение"
        android:textAllCaps="true"/>

    <LinearLayout
        android:id="@+id/choice_service_list_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:background="@color/black"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/choice_service_item1"
            android:layout_height="36dp"
            android:layout_width="match_parent"
            android:background="@color/grey">

            <TextView
                android:id="@+id/choice_service_item1_head"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Вызов сантехника"/>

            <TextView
                android:id="@+id/choice_service_price1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="3000 Р"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choice_service_item2"
            android:layout_height="36dp"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:background="@color/grey">

            <TextView
                android:id="@+id/choice_service_item2_head"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Замена раковины"/>

            <TextView
                android:id="@+id/choice_service_price2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="2000 Р"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choice_service_item3"
            android:layout_height="36dp"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:background="@color/grey">

            <TextView
                android:id="@+id/choice_service_item3_head"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="Замена унитаза"/>

            <TextView
                android:id="@+id/choice_service_price3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="3000 Р"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/choice_service_add_btn"
        android:layout_height="46dp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:textSize="14dp"
        android:text="Добавить в заказ"/>

</LinearLayout>