<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SettingsSecondFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/settings_second_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_header_menu" />

    <LinearLayout
        android:id="@+id/settings_second_wrapper"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/settings_second_img"
            android:layout_height="103dp"
            android:layout_width="103dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/black"/>


        <LinearLayout
            android:id="@+id/settings_second_change_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_second_change_head"
                android:layout_height="46dp"
                android:layout_width="match_parent"
                android:layout_marginTop="33dp"
                android:gravity="center"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:text="Смена пароля"/>

            <LinearLayout
                android:id="@+id/settings_second_change_inner_wrapper"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="12dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:background="@color/light_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settings_second_old_edit"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="Старый пароль"/>
                <TextView
                    android:id="@+id/settings_second_new_edit"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="Новый пароль"/>

                <Button
                    android:id="@+id/settings_second_change_btn"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:text="Изменить"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>