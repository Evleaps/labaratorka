<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.OtherFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/other_header"
        android:name="myapp.moydom.ru.myhouse.screens.HeaderMenuFragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_header_menu" />

    <ScrollView
        android:id="@+id/other_scroll_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/other_content_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/other_desc"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:text="Выберите необходимые услуги"
                android:textAllCaps="true"/>

            <LinearLayout
                android:id="@+id/other_btns_container"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/other_water_btn"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:text="@string/service_water"/>

                <Button
                    android:id="@+id/other_power_btn"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:text="@string/service_power"/>

                <Button
                    android:id="@+id/other_service_btn"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:text="@string/service_service"/>

                <TextView
                    android:id="@+id/other_selected_head"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:text="Выбранные услуги"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"/>

                <LinearLayout
                    android:id="@+id/other_selected_container"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="13dp"
                    android:paddingLeft="35dp"
                    android:paddingBottom="13dp"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/other_selected_row1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/other_selected_head1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:text="Замена унитаза"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/other_minus1"
                            android:layout_height="4dp"
                            android:layout_width="19dp"
                            android:layout_marginRight="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/white"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/other_selected_row2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp">

                        <TextView
                            android:id="@+id/other_selected_head2"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:text="Замена трубы"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/other_minus2"
                            android:layout_height="4dp"
                            android:layout_width="19dp"
                            android:layout_marginRight="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/white"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/other_selected_row3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp">

                        <TextView
                            android:id="@+id/other_selected_head3"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:text="Прочистка труб"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/other_minus3"
                            android:layout_height="4dp"
                            android:layout_width="19dp"
                            android:layout_marginRight="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/white"/>

                    </RelativeLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/other_send_btn"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:text="Отправить заявку"/>

                <TextView
                    android:id="@+id/other_selected_desc"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:text="@string/other_desc"
                    android:textColor="@color/text_grey"/>

            </LinearLayout>



        </LinearLayout>
        
    </ScrollView>

</LinearLayout>